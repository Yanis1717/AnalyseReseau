                    <p>{{ content.phase1_desc }}</p>
                    <ul class="mb-0">
                        <li><strong>Setup:</strong> DumpFile.txt & txt_to_csv.py</li>
                        <li><strong>Run:</strong> <code>python txt_to_csv.py</code></li>
                    </ul>
                </div>
                <img src="{{ asset('images/Image1.png') }}" alt="1">
            </section>

            {# Phase 2 (Excel) #}
            <section class="mb-5">
                <h3 class="h4 text-dark mb-3">
                    <span class="badge bg-primary me-2">2</span> 
                    {{ current_locale == 'fr' ? 'Phase 2 : Analyse Excel' : 'Phase 2: Excel Analysis' }}
